<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="rahulstech.jfx.historydemo.HomeController"
      alignment="TOP_CENTER" spacing="12"
      style="-fx-background-color: DARKKHAKI">

    <padding>
        <Insets top="12" left="12" right="12" bottom="12"/>
    </padding>

    <Label text="Welcome to History Demo" style="-fx-font-weight: 700; -fx-text-size: 18px"/>

    <Button text="Go To No History Screen" onAction="#handleGoToNoHistoryScreenButtonClick"/>

    <Button text="Sign Up" onAction="#handleSignUpButtonClick"/>

</VBox>
