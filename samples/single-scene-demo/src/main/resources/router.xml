<?xml version="1.0" encoding="UTF-8"?>
<router xmlns="https://github.com/rahulstech/javafx-routing"
        home="dashboard"
        homeEnterAnimation="slide_in_right"
        enterAnimation="enter_animation"
        exitAnimation="exit_animation"
        popEnterAnimation="slide_right_fade_in"
        popExitAnimation="pop_exit_animation">

    <animation id="pop_exit_animation"
               name="slide_left_fade_out"
               duration="duration_long"/>

    <animation id="enter_animation"
               name="slide_left_fade_in"
               duration="320ms"/>

    <compound-animation id="exit_animation"
                        name="scale_down_xy_fade_out"
                        duration="280ms">
        <animation
                name="scale_down_xy"/>
        <animation
                name="fade_out"
                fromAlpha="1"
                toAlpha="0.3"/>
    </compound-animation>

    <!-- adding some destinations -->

    <destination
            id="dashboard"
            fxml="dashboard.fxml"
            singleTop="true"
            arguments="home_data"/>

    <destination
            id="screen1"
            fxml="screen.fxml"
            controllerClass="rahulstech.jfx.singlescenedemo.ScreenController">

        <arguments>
            <argument name="abc" type="int" required="false"/>
        </arguments>

    </destination>

    <destination
            id="screen2"
            arguments="mnp"
            fxml="screen.fxml"
            controllerClass="rahulstech.jfx.singlescenedemo.ScreenController"/>


    <destination
            id="screen3"
            fxml="screen.fxml"
            controllerClass="rahulstech.jfx.singlescenedemo.ScreenController"/>

    <destination
            id="screen4"
            fxml="screen.fxml"
            controllerClass="rahulstech.jfx.singlescenedemo.ScreenController"/>

    <destination id="screen0"
                 fxml="screen.fxml"
                 controllerClass="rahulstech.jfx.singlescenedemo.ScreenController"/>

    <!-- screen with custom RouterExecutor -->
    <destination id="screen5"
                 executor="rahulstech.jfx.singlescenedemo.DemoRouterExecutor"
                 controllerClass="rahulstech.jfx.singlescenedemo.DemoCustomLifecycleController"/>

    <!-- destinations for example of result passing -->
    <destination id="producer"
                 fxml="producer.fxml"/>

    <destination id="consumer"
                 fxml="consumer.fxml"/>

    <!-- define arguments -->
    <arguments id="mnp">
        <argument name="xyz" type="int_array" required="true"/>
    </arguments>

    <arguments id="home_data">
        <argument name="arg0" type="string" required="true"/>
        <argument name="arg1" type="int|int_array"/>
    </arguments>

</router>